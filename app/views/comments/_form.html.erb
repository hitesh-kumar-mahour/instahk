<%= form_for ([@post,@post.comments.build]) do |f| %>

<div class="input-field">
  <input placeholder="*required field, minimum 3 characters" type="text" class="validate">
  <%= f.label :name,class:"active"%>
</div>

<div class="input-field">
  <%= f.label :body,class:"active"%>
  <%= f.text_area :body,class:"materialize-textarea"%>
</div>
  <%= f.submit 'Comment', class: 'btn' %>

<%end%>
