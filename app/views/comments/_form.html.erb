<%= form_for ([@post,@post.comments.build]) do |f| %>


  <%=  f.hidden_field :user_id , :value => current_user.id%>

  <div class="row">
      <div class="col s2 m1 l1" style="margin-left:5px"> <%= image_tag current_user.avatar.url(:thumb),class:"circle responsive-img"%></div>
      <div class="col s3 m2 l2" style="margin:10px 0 0 5px;"><strong > <%= link_to current_user.username, profile_path(current_user), style:"color:green;"%></strong></div>
      <div class="col s7 m8 l8">
        <%= f.text_area :body,placeholder:"enter your comment here"%>
      </div>
  </div>

  <%= f.submit 'Comment', class: 'btn right' %>
  <br><br>

<%end%>
