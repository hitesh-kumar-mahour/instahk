
<h2 class="green-text"><%=@user.username.capitalize%></h2>

  <div class="followers_following_count">
      <a href="<%= followers_path(@user) %>"> <strong id="followers<%=@user.id%>" class="stat"> <%= @user.followers.count %></strong> followers</a>
      <a href="<%= following_path(@user) %>"> <strong id="following<%=@user.id%>" class="stat"> <%= @user.following.count %></strong> following</a>
  </div>

<%= render partial: "followunfollow_button", object:  @user, as: 'user' %>

<div class="description">
      <%=render "pages/description"%>
    <br>
    <br>
</div>





<h4 class="center"><%= pluralize(@posts.count,"Post")%> </h4>

<% @posts.each do |post|%>
<br>
 <div class=" row single_post hoverable">
   <div class="col s12 card">
     <div class="card-action header row">
         <%= link_to profile_path(post.user) do%>
           <div class="left col blue-text">
             <%= post.user.username.capitalize %>
           </div>
         <%end%>
       <div class="right col">
         <%=time_ago_in_words(post.created_at)%> ago</div>
     </div>
  <br>
  <%= link_to post_path(post) do %>
  <div class="center">
     <%= image_tag post.image.url(:medium), class:"responsive-img" %>
   </div>
   <%end%>
  <br>
  <div class="card-action center"> <%= post.description%> </div>
</div>
</div>
<% end %>
  <br>
