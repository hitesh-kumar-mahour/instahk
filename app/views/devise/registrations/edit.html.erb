<h2>Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="input-field row">
        <div class="col l2"><%= f.label :avatar%></div>
        <div class="col l10"><%= f.file_field :avatar %></div>
    </div>

    <br><br>
    <div class="input-field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class="input-field"><%= f.label :about %><br />
        <%= f.text_field :about, autofocus: true %></div>

    <div class="input-field">
      <%= f.label "Gender"%><br><br>
      <%= f.radio_button :is_female, 1 %> <%= f.label :is_female, "Female",value: 1 %> &nbsp &nbsp
      <%= f.radio_button :is_female, 0 %> <%= f.label :is_female, "Male",value: 0 %>
    </div>
<br>
    <div class="input-field">
        <%= f.label :date_of_birth %><br />
        <%= f.text_field :date_of_birth, class:"datepicker" %>
    </div>

  <div class="input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="input-field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off",:placeholder => " leave blank if you don't want to change it" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="input-field">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "off",:placeholder => " we need your current password to confirm your changes" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
